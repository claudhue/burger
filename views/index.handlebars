<h1 class = "text-center">Eat-da-burger!</h1>
<div class="text-center">
  <img src="./assets/img/burger.png" class="rounded" alt=" ">
</div>


<div class = "row">
<div class = "col-5">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class = "col-5">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">burger:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

<button type="submit">Add burger</button>
</form>
